<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".customer_login_register_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"></LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Security Question"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="25dp"></LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Help us to help you to recover your account. Your date of birth will allow us to vertify your account if you forget your password "
        android:layout_marginLeft="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"></LinearLayout>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your date of birth"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:hint="Select Date"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"></LinearLayout>

    <Button
        android:id="@+id/button6"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:layout_gravity="center_horizontal"
        android:background="#000"
        android:textColor="@android:color/white"

        />


</LinearLayout>